@page
@model MambuGlViewer.Pages.GLSummaryModel
@{
    ViewData["Title"] = "GL Summary";
}

<h1>GL Summary</h1>

@if (Model.GLSummaries.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>GL Code</th>
                <th>GL Name</th>
                <th>Type</th>
                <th>Total Debits</th>
                <th>Total Credits</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var summary in Model.GLSummaries)
            {
                <tr style="cursor: pointer;" onclick="window.location.href='/GLDetails?glCode=@Uri.EscapeDataString(summary.GLCode)'">
                    <td>@summary.GLCode</td>
                    <td>@summary.GLName</td>
                    <td>@summary.Type</td>
                    <td>@summary.TotalDebits.ToString("N2")</td>
                    <td>@summary.TotalCredits.ToString("N2")</td>
                    <td>@summary.Balance.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No transactions uploaded yet. Please upload a file on the <a asp-page="/Index">Upload page</a>.</p>
}