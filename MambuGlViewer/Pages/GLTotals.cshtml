@page
@model MambuGlViewer.Pages.GLTotalsModel
@{
    ViewData["Title"] = "GL Totals";
}

<h1>GL Totals</h1>

@if (Model.Transactions.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>GL Code</th>
                <th>GL Name</th>
                <th>Type</th>
                <th>Currency</th>
                <th>Total Debits</th>
                <th>Total Credits</th>
                <th>Value at End</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.GLAccountTotals)
            {
                <tr>
                    <td>@account.GLCode</td>
                    <td>@account.GLName</td>
                    <td>@account.Type</td>
                    <td>@account.CurrencyCode</td>
                    <td>@account.TotalDebits.ToString("N2")</td>
                    <td>@account.TotalCredits.ToString("N2")</td>
                    <td>@account.ValueAtEnd.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No transactions uploaded yet. Please upload a file on the <a asp-page="/Index">Upload page</a>.</p>
}