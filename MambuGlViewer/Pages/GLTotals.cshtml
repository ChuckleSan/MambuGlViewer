@page
@model MambuGlViewer.Pages.GLTotalsModel
@{
    ViewData["Title"] = "GL Totals";
}

<h1>GL Totals</h1>

@if (Model.GLTotals.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>GL Code</th>
                <th>GL Name</th>
                <th>GL Type</th>
                <th>Total Credits</th>
                <th>Total Debits</th>
                <th>Value at End</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var total in Model.GLTotals)
            {
                <tr>
                    <td>@total.GLCode</td>
                    <td>@total.GLName</td>
                    <td>@total.GLType</td>
                    <td>@total.TotalCredits.ToString("N2")</td>
                    <td>@total.TotalDebits.ToString("N2")</td>
                    <td>@total.ValueAtEnd.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No transactions uploaded yet. Please upload a file on the <a asp-page="/Index">Upload page</a>.</p>
}